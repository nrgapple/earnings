datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions", "fullTextSearch"]
}

model LatestFiling {
  id String @id @default(uuid())
  latestDate  DateTime @unique
}

model Company {
  ticker    String    @id
  id        String    @unique @default(uuid())
  name      String?  
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  reports   Report[]

  @@index([name])
}

model Report {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
  val           Float?
  accn          String?
  end           DateTime
  start         DateTime?
  fp            String
  fy            Int
  tag           String
  secLink       String?
  Company       Company?  @relation(fields: [companyTicker], references: [ticker])
  companyTicker String?

  @@unique([fy, fp, tag, companyTicker])
  @@index([tag])
}